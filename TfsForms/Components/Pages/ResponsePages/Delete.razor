@page "/responses/delete"
@using Microsoft.EntityFrameworkCore
@using TfsForms.Models
@inject IDbContextFactory<TfsForms.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Response</h2>
    <hr />
    @if (response is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">DesigneeId</dt>
            <dd class="col-sm-10">@response.DesigneeId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ReportingEntityId</dt>
            <dd class="col-sm-10">@response.ReportingEntityId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">QuestionId</dt>
            <dd class="col-sm-10">@response.QuestionId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Answer</dt>
            <dd class="col-sm-10">@response.Answer</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsDraft</dt>
            <dd class="col-sm-10">@response.IsDraft</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedAt</dt>
            <dd class="col-sm-10">@response.CreatedAt</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedAt</dt>
            <dd class="col-sm-10">@response.UpdatedAt</dd>
        </dl>
        <EditForm method="post" Model="response" OnValidSubmit="DeleteResponse" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(response is null)">Delete</button> |
            <a href="/responses">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Response? response;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        response = await context.Responses.FirstOrDefaultAsync(m => m.Id == Id);

        if (response is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteResponse()
    {
        using var context = DbFactory.CreateDbContext();
        context.Responses.Remove(response!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/responses");
    }
}
